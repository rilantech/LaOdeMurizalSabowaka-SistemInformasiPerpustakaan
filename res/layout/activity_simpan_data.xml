<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ndroid="http://schemas.android.com/apk/distribution" xmlns:sweet="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar android:id="@+id/toolbar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textStyle="bold" android:id="@+id/label" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="28dp" android:text="Tambah Data" android:textAlignment="center"/>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout android:background="#dfdfdfdf" android:layout_width="match_parent" android:layout_height="1dp" android:elevation="4dp"/>
    <LinearLayout android:orientation="vertical" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText android:id="@+id/gambar" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Masukan Gambar"/>
        </android.support.design.widget.TextInputLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="10dp"/>
        <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText android:id="@+id/nama" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Masukan Nama"/>
        </android.support.design.widget.TextInputLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="10dp"/>
        <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText android:id="@+id/email" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Masukan Email"/>
        </android.support.design.widget.TextInputLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="10dp"/>
        <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText android:id="@+id/nip" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Masukan NIP" android:maxLength="14" android:inputType="phone"/>
        </android.support.design.widget.TextInputLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="10dp"/>
        <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText android:id="@+id/alamat" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Masukan Alamat"/>
        </android.support.design.widget.TextInputLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="20dp"/>
        <Button android:textColor="@color/white" android:id="@+id/simpan_data" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Simpan Data" android:backgroundTint="@color/purple_700"/>
    </LinearLayout>
</LinearLayout>
