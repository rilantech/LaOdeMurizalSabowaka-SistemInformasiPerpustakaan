<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ndroid="http://schemas.android.com/apk/distribution" xmlns:sweet="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar" android:background="#0f8bdf" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Tambah Tagihan"/>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout android:background="#dfdfdfdf" android:layout_width="match_parent" android:layout_height="1dp" android:elevation="4dp"/>
    <LinearLayout android:orientation="vertical" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <EditText android:id="@+id/etNomorpelanggan" android:background="@drawable/rounded_editext" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="No. Pelanggan" android:singleLine="true"/>
        <EditText android:id="@+id/etNama" android:background="@drawable/rounded_editext" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:hint="Nama"/>
        <EditText android:id="@+id/etBulan" android:background="@drawable/rounded_editext" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:hint="Bulan"/>
        <EditText android:id="@+id/etPenggunaair" android:background="@drawable/rounded_editext" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:hint="Penggunaan Air"/>
        <EditText android:id="@+id/etJumlahbayar" android:background="@drawable/rounded_editext" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:hint="Jumlah Bayar"/>
        <Button android:textSize="25dp" android:textColor="@color/white" android:layout_gravity="center" android:id="@+id/btnsimpan" android:background="@drawable/rounded_editext" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="Simpan" android:textAllCaps="false" android:backgroundTint="#0f8bdf"/>
    </LinearLayout>
</LinearLayout>
